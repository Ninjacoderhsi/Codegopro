<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/_coordinator"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:layout_weight="1">
			<LinearLayout
				android:id="@+id/panel"
				android:layout_width="match_parent"
				android:layout_height="65dp"
				android:padding="8dp"
				android:background="#212121"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:layout_gravity="center_vertical">
				<ImageView
					android:id="@+id/undo"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@drawable/cutting_4"
					android:scaleType="centerInside"
					android:layout_weight="1" />
				<ImageView
					android:id="@+id/cut"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@drawable/cutting_1"
					android:scaleType="centerInside"
					android:layout_weight="1" />
				<ImageView
					android:id="@+id/copy"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@drawable/cutting_3"
					android:scaleType="centerInside"
					android:layout_weight="1" />
				<ImageView
					android:id="@+id/setall"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@drawable/cutting_5"
					android:scaleType="centerInside"
					android:layout_weight="1" />
				<ImageView
					android:id="@+id/icon"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@drawable/rubika"
					android:scaleType="centerInside"
					android:layout_weight="1" />
				<LinearLayout
					android:id="@+id/colorpi"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/textview1"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:padding="8dp"
						android:textSize="12sp"
						android:textColor="#795548" />
				</LinearLayout>
				<ImageView
					android:id="@+id/redo"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@drawable/cutting_2"
					android:scaleType="centerInside"
					android:layout_weight="1" />
				<ImageView
					android:id="@+id/more"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@drawable/cutting_7"
					android:scaleType="centerInside"
					android:layout_weight="1" />
			</LinearLayout>
			<io.github.rosemoe.sora.widget.CodeEditor
				android:id="@+id/editor"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#212121"
				android:orientation="horizontal"
				android:layout_weight="1" />
			<LinearLayout
				android:id="@+id/linear4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#000000"
				android:orientation="horizontal">
				<HorizontalScrollView
					android:id="@+id/hscroll1"
					android:layout_width="match_parent"
					android:layout_height="match_parent">
					<org.codego.ninjacoder.SymbolInputView
						android:id="@+id/sysbar"
						android:layout_width="wrap_content"
						android:layout_height="60dp"
						android:padding="8dp"
						android:background="#424242"
						android:orientation="horizontal" />
				</HorizontalScrollView>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:id="@+id/_fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="16dp"
		android:layout_marginRight="16dp"
		android:layout_marginBottom="65dp"
		android:layout_gravity="right|bottom"
		app:srcCompat="@drawable/cutting_6" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
